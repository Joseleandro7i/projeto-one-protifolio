{
  "name": "portfolio",
  "version": "0.0.4",
  "description": "Hello, and welcome to my portfolio! Think of it as a spotlight on a stage, where I showcase my brightest projects, technical skills, and personal strengths. But this stage also reveals more about who I am—my hobbies, passions, interests, and aspirations.",
  "keywords": [
    "portfolio",
    "web development",
    "react",
    "tailwind css",
    "next.js"
  ],
  "main": "index.js",
  "scripts": {
    "dev": "cross-env PORT=${PORT:-4000} next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "check-updates": "npx npm-check-updates",
    "json-server": "json-server --watch api-projetos/projetos.json --port ${JSON_PORT:-8000}",
    "start-vercel": "concurrently \"npm run dev\" \"npm run json-server\"",
    "prepare": "husky"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "GitHub",
    "url": "git+https://github.com/Jose-leandro/Portfolio.git"
  },
